{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "default",
                    "roles": [
                        {
                            "name": "main",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080,
                        "tls": {
                           "key": "/etc/ssl/private/mediacenter.key",
                           "certificate": "/etc/ssl/certs/ytdjb.com",
                           "ciphers": "ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AES:RSA+3DES:!ADH:!AECDH:!MD5:!DSS",
                           "hostname": "ytdjb.com"
                        }
                    },
                    "paths": {
                        "ws": {
                            "type": "websocket"
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
                {
                    "type": "class",
                    "classname": "socketserver.SocketServer",
                    "realm": "default",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8080,
                            "tls": {
                            }
                        },
                        "url": "wss://127.0.0.1:8080/ws"
                    }
                }
            ]
        }
    ]
}
